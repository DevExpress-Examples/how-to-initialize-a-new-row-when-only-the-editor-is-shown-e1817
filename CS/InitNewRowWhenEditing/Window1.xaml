<Window x:Class="InitNewRowWhenEditing.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">
    <Grid>
        <dxg:GridControl x:Name="grid" AutoPopulateColumns="True">
            <dxg:GridControl.View>
                <dxg:TableView x:Name="view" NewItemRowPosition="Top" ShownEditor="TableView_ShownEditor" InitNewRow="TableView_InitNewRow"/>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</Window>
