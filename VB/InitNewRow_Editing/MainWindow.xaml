<Window x:Class="InitNewRow_Editing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
        xmlns:local="clr-namespace:InitNewRow_Editing"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <dxg:GridControl x:Name="grid" AutoPopulateColumns="True" ItemsSource="{Binding Items}">
            <dxg:GridControl.View>
                <dxg:TableView x:Name="view" NewItemRowPosition="Top" >
                    <dxmvvm:Interaction.Behaviors >
                        <local:InitNewRowOnEditingBehavior />
                    </dxmvvm:Interaction.Behaviors>
                </dxg:TableView>
            </dxg:GridControl.View>
        </dxg:GridControl>
    </Grid>
</Window>
